{% if paginate.pages > 1 %}
  <nav class="flex items-center justify-center gap-2">
    {% if paginate.previous %}
      <a href="{{ paginate.previous.url }}" class="px-4 py-2 bg-white/40 dark:bg-black/40 backdrop-blur-lg border border-white/50 dark:border-white/10 rounded-lg text-gray-900 dark:text-white hover:bg-blue-600 hover:text-white transition-colors">
        ← Anterior
      </a>
    {% endif %}

    {% for part in paginate.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="px-4 py-2 bg-white/40 dark:bg-black/40 backdrop-blur-lg border border-white/50 dark:border-white/10 rounded-lg text-gray-900 dark:text-white hover:bg-blue-600 hover:text-white transition-colors">
          {{ part.title }}
        </a>
      {% else %}
        {% if part.title == paginate.current_page %}
          <span class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium">
            {{ part.title }}
          </span>
        {% else %}
          <span class="px-4 py-2">{{ part.title }}</span>
        {% endif %}
      {% endif %}
    {% endfor %}

    {% if paginate.next %}
      <a href="{{ paginate.next.url }}" class="px-4 py-2 bg-white/40 dark:bg-black/40 backdrop-blur-lg border border-white/50 dark:border-white/10 rounded-lg text-gray-900 dark:text-white hover:bg-blue-600 hover:text-white transition-colors">
        Siguiente →
      </a>
    {% endif %}
  </nav>
{% endif %}
