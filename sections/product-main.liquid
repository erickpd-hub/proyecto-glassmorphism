<section class="container mx-auto px-4 py-12">
  <div class="max-w-6xl mx-auto bg-white/30 dark:bg-black/30 backdrop-blur-xl rounded-3xl p-8 md:p-12 border border-white/50 dark:border-white/10 shadow-2xl">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Product Images -->
      <div class="space-y-4">
        <div class="aspect-square rounded-2xl overflow-hidden bg-white dark:bg-gray-800">
          {% if product.featured_image %}
            <img id="main-product-image" src="{{ product.featured_image | img_url: '1000x1000' }}" alt="{{ product.title }}" class="w-full h-full object-cover">
          {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
          {% endif %}
        </div>
        
        {% if product.images.size > 1 %}
          <div class="grid grid-cols-4 gap-4">
            {% for image in product.images %}
              <button class="aspect-square rounded-lg overflow-hidden border-2 border-transparent hover:border-blue-600 transition-colors" 
                      onclick="document.getElementById('main-product-image').src='{{ image | img_url: '1000x1000' }}'">
                <img src="{{ image | img_url: '200x200' }}" alt="{{ product.title }}" class="w-full h-full object-cover">
              </button>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Product Info -->
      <div class="space-y-6">
        <div>
          <h1 class="text-4xl md:text-5xl text-gray-900 dark:text-white mb-2">{{ product.title }}</h1>
          <div class="flex items-center gap-4 mb-4">
            <span class="text-3xl text-gray-900 dark:text-white font-semibold">
              {{ product.selected_or_first_available_variant.price | money }}
            </span>
            {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
              <span class="text-xl text-gray-500 dark:text-gray-400 line-through">
                {{ product.selected_or_first_available_variant.compare_at_price | money }}
              </span>
              <span class="bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                OFERTA
              </span>
            {% endif %}
          </div>
        </div>

        {% if product.description != blank %}
          <div class="text-gray-700 dark:text-gray-300 prose dark:prose-invert max-w-none">
            {{ product.description }}
          </div>
        {% endif %}

        <form action="/cart/add" method="post" id="product-form" class="space-y-6">
          <!-- Variants -->
          {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
              <div>
                <label class="block text-gray-900 dark:text-white font-medium mb-2">{{ option.name }}</label>
                <div class="flex flex-wrap gap-2">
                  {% for value in option.values %}
                    <label class="cursor-pointer">
                      <input type="radio" name="option-{{ option.position }}" value="{{ value | escape }}" class="hidden peer">
                      <span class="block px-6 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg peer-checked:border-blue-600 peer-checked:bg-blue-600 peer-checked:text-white text-gray-900 dark:text-white transition-all hover:border-blue-600">
                        {{ value }}
                      </span>
                    </label>
                  {% endfor %}
                </div>
              </div>
            {% endfor %}
          {% endunless %}

          <!-- Quantity -->
          <div>
            <label class="block text-gray-900 dark:text-white font-medium mb-2">Cantidad</label>
            <input type="number" name="quantity" value="1" min="1" class="w-24 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-gray-900 dark:text-white">
          </div>

          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          
          <!-- Add to Cart Button -->
          <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white rounded-full py-4 px-8 text-lg font-medium transition-colors flex items-center justify-center group">
            <svg class="w-6 h-6 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            {% if product.available %}
              AGREGAR AL CARRITO
            {% else %}
              AGOTADO
            {% endif %}
          </button>
        </form>

        <!-- Product Meta -->
        {% if product.vendor != blank or product.type != blank %}
          <div class="border-t border-gray-300 dark:border-gray-600 pt-6 space-y-2">
            {% if product.vendor != blank %}
              <p class="text-gray-700 dark:text-gray-300">
                <span class="font-medium">Marca:</span> {{ product.vendor }}
              </p>
            {% endif %}
            {% if product.type != blank %}
              <p class="text-gray-700 dark:text-gray-300">
                <span class="font-medium">Tipo:</span> {{ product.type }}
              </p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Main",
  "settings": []
}
{% endschema %}
