<section class="container mx-auto px-4 py-12">
  <div class="max-w-6xl mx-auto">
    <div class="bg-white/30 dark:bg-black/30 backdrop-blur-xl rounded-3xl p-8 md:p-12 border border-white/50 dark:border-white/10 shadow-2xl mb-8">
      <h1 class="text-4xl md:text-6xl text-gray-900 dark:text-white mb-8">CARRITO DE COMPRAS</h1>
      
      <form action="{{ routes.cart_url }}" method="post" id="cart-form">
        {% if cart.item_count > 0 %}
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2 space-y-4">
              {% for item in cart.items %}
                <div class="bg-white/40 dark:bg-black/40 backdrop-blur-lg rounded-2xl p-6 border border-white/50 dark:border-white/10 shadow-lg">
                  <div class="flex gap-6">
                    <!-- Product Image -->
                    <div class="w-32 h-32 flex-shrink-0 rounded-xl overflow-hidden">
                      {% if item.image %}
                        <img src="{{ item.image | img_url: '200x200' }}" alt="{{ item.title }}" class="w-full h-full object-cover">
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                      {% endif %}
                    </div>
                    
                    <!-- Product Info -->
                    <div class="flex-1">
                      <h3 class="text-xl text-gray-900 dark:text-white mb-2">
                        <a href="{{ item.url }}">{{ item.product.title }}</a>
                      </h3>
                      
                      {% unless item.variant.title == 'Default Title' %}
                        <p class="text-gray-700 dark:text-gray-300 mb-2">{{ item.variant.title }}</p>
                      {% endunless %}
                      
                      <div class="flex items-center gap-4 mb-4">
                        <span class="text-2xl text-gray-900 dark:text-white font-semibold">
                          {{ item.final_line_price | money }}
                        </span>
                        {% if item.original_line_price > item.final_line_price %}
                          <span class="text-gray-500 dark:text-gray-400 line-through">
                            {{ item.original_line_price | money }}
                          </span>
                        {% endif %}
                      </div>
                      
                      <!-- Quantity -->
                      <div class="flex items-center gap-4">
                        <div class="flex items-center border border-gray-300 dark:border-gray-600 rounded-lg overflow-hidden">
                          <button type="button" 
                                  class="quantity-btn px-4 py-2 bg-white dark:bg-gray-800 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                                  data-line="{{ forloop.index }}"
                                  data-quantity="{{ item.quantity | minus: 1 }}">
                            -
                          </button>
                          <input type="number" 
                                 name="updates[]" 
                                 id="updates_{{ item.key }}"
                                 value="{{ item.quantity }}" 
                                 min="0"
                                 class="w-16 text-center bg-white dark:bg-gray-800 border-x border-gray-300 dark:border-gray-600 text-gray-900 dark:text-white"
                                 data-line="{{ forloop.index }}">
                          <button type="button" 
                                  class="quantity-btn px-4 py-2 bg-white dark:bg-gray-800 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                                  data-line="{{ forloop.index }}"
                                  data-quantity="{{ item.quantity | plus: 1 }}">
                            +
                          </button>
                        </div>
                        
                        <button type="button" 
                                class="remove-item text-red-600 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors flex items-center gap-2"
                                data-line="{{ forloop.index }}">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                          Eliminar
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
            
            <!-- Order Summary -->
            <div class="lg:col-span-1">
              <div class="bg-white/40 dark:bg-black/40 backdrop-blur-lg rounded-2xl p-6 border border-white/50 dark:border-white/10 shadow-lg sticky top-24">
                <h2 class="text-2xl text-gray-900 dark:text-white mb-6">RESUMEN</h2>
                
                <div class="space-y-4 mb-6">
                  <div class="flex justify-between text-gray-700 dark:text-gray-300">
                    <span>Subtotal</span>
                    <span>{{ cart.total_price | money }}</span>
                  </div>
                  
                  {% if cart.total_discount > 0 %}
                    <div class="flex justify-between text-green-600 dark:text-green-400">
                      <span>Descuento</span>
                      <span>-{{ cart.total_discount | money }}</span>
                    </div>
                  {% endif %}
                  
                  <div class="border-t border-gray-300 dark:border-gray-600 pt-4">
                    <div class="flex justify-between text-xl text-gray-900 dark:text-white font-semibold">
                      <span>Total</span>
                      <span>{{ cart.total_price | money }}</span>
                    </div>
                  </div>
                </div>
                
                {% if section.settings.show_note %}
                  <div class="mb-6">
                    <label for="cart-note" class="block text-gray-900 dark:text-white mb-2 font-medium">Nota del pedido</label>
                    <textarea name="note" 
                              id="cart-note" 
                              rows="3" 
                              class="w-full bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-gray-900 dark:text-white"
                              placeholder="Instrucciones especiales...">{{ cart.note }}</textarea>
                  </div>
                {% endif %}
                
                <button type="submit" 
                        name="checkout"
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white rounded-full py-4 px-8 text-lg font-medium transition-colors flex items-center justify-center group mb-4">
                  <svg class="w-6 h-6 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  FINALIZAR COMPRA
                </button>
                
                <a href="{{ routes.all_products_collection_url }}" 
                   class="block text-center text-blue-600 dark:text-blue-400 hover:underline">
                  Continuar comprando
                </a>
              </div>
            </div>
          </div>
        {% else %}
          <div class="text-center py-16">
            <svg class="w-24 h-24 mx-auto text-gray-400 dark:text-gray-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            <h2 class="text-3xl text-gray-900 dark:text-white mb-4">Tu carrito está vacío</h2>
            <p class="text-xl text-gray-700 dark:text-gray-300 mb-8">Agrega algunos productos para comenzar</p>
            <a href="{{ routes.all_products_collection_url }}" 
               class="inline-flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full transition-colors font-medium">
              EXPLORAR PRODUCTOS
            </a>
          </div>
        {% endif %}
      </form>
    </div>
  </div>
</section>

<script>
// Update cart quantity
document.querySelectorAll('.quantity-btn').forEach(btn => {
  btn.addEventListener('click', async function() {
    const line = this.dataset.line;
    const quantity = parseInt(this.dataset.quantity);
    
    if (quantity < 0) return;
    
    try {
      const response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          line: line,
          quantity: quantity
        })
      });
      
      if (response.ok) {
        location.reload();
      }
    } catch (error) {
      console.error('Error updating cart:', error);
    }
  });
});

// Remove item from cart
document.querySelectorAll('.remove-item').forEach(btn => {
  btn.addEventListener('click', async function() {
    const line = this.dataset.line;
    
    try {
      const response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          line: line,
          quantity: 0
        })
      });
      
      if (response.ok) {
        location.reload();
      }
    } catch (error) {
      console.error('Error removing item:', error);
    }
  });
});

// Update cart on quantity input change
document.querySelectorAll('input[name="updates[]"]').forEach(input => {
  input.addEventListener('change', async function() {
    const line = this.dataset.line;
    const quantity = parseInt(this.value);
    
    if (quantity < 0) return;
    
    try {
      const response = await fetch('/cart/change.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          line: line,
          quantity: quantity
        })
      });
      
      if (response.ok) {
        location.reload();
      }
    } catch (error) {
      console.error('Error updating cart:', error);
    }
  });
});
</script>

{% schema %}
{
  "name": "Cart Main",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_note",
      "label": "Show order note",
      "default": true
    }
  ]
}
{% endschema %}
