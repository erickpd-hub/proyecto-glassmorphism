{% if recommendations.products_count > 0 %}
<section class="container mx-auto px-4 py-12">
  <div class="text-center mb-12">
    <h2 class="text-4xl md:text-5xl text-gray-900 dark:text-white mb-4">
      TAMBIÃ‰N TE PUEDE GUSTAR
    </h2>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
    {% for product in recommendations.products limit: 4 %}
      <div class="group bg-white/40 dark:bg-black/40 backdrop-blur-lg rounded-2xl overflow-hidden border border-white/50 dark:border-white/10 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
        <div class="relative overflow-hidden aspect-square">
          <a href="{{ product.url }}">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: '600x600' }}" 
                   alt="{{ product.title }}"
                   loading="lazy"
                   class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
            {% endif %}
          </a>
        </div>

        <div class="p-6">
          <h3 class="text-lg text-gray-900 dark:text-white mb-2">
            <a href="{{ product.url }}">{{ product.title }}</a>
          </h3>
          <div class="flex items-center gap-3">
            <span class="text-xl text-gray-900 dark:text-white">
              {{ product.price | money }}
            </span>
            {% if product.compare_at_price > product.price %}
              <span class="text-gray-500 dark:text-gray-400 line-through text-sm">
                {{ product.compare_at_price | money }}
              </span>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
{% endif %}

<script>
  // Fetch product recommendations
  fetch('/recommendations/products.json?product_id={{ product.id }}&limit=4')
    .then(response => response.json())
    .then(({ products }) => {
      // Recommendations are automatically rendered by Shopify
    });
</script>

