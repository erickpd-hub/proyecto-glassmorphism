<footer class="mt-20 py-12 bg-white/30 dark:bg-black/30 backdrop-blur-lg border-t border-white/50 dark:border-white/10">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link_list' %}
            <div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ block.settings.title }}</h3>
              <ul class="space-y-2">
                {% for link in linklists[block.settings.menu].links %}
                  <li>
                    <a href="{{ link.url }}" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% when 'text' %}
            <div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{{ block.settings.title }}</h3>
              <div class="text-gray-700 dark:text-gray-300">{{ block.settings.text }}</div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    <div class="border-t border-gray-300 dark:border-gray-700 pt-8 text-center">
      <p class="text-gray-900 dark:text-white">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.
      </p>
      
      {% if section.settings.show_payment_icons %}
        <div class="flex justify-center gap-2 mt-4">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'h-8' }}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "About us"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add your store information here.</p>"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list"
      },
      {
        "type": "link_list"
      },
      {
        "type": "text"
      }
    ]
  }
}
{% endschema %}
