<section class="container mx-auto px-4 py-20">
  <div class="text-center mb-12">
    {% if section.settings.title != blank %}
      <h2 class="text-4xl md:text-5xl text-gray-900 dark:text-white mb-4">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    {% if section.settings.description != blank %}
      <p class="text-xl text-gray-700 dark:text-gray-300">
        {{ section.settings.description }}
      </p>
    {% endif %}
  </div>

  {% if section.settings.collection != blank %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
        <div class="group bg-white/40 dark:bg-black/40 backdrop-blur-lg rounded-2xl overflow-hidden border border-white/50 dark:border-white/10 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
          <div class="relative overflow-hidden aspect-square">
            <a href="{{ product.url }}">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | img_url: '800x800' }}" 
                     alt="{{ product.title }}"
                     loading="lazy"
                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
              {% endif %}
            </a>
            
            {% if product.compare_at_price > product.price %}
              <span class="absolute top-4 left-4 bg-blue-600 text-white border-0 px-3 py-1 rounded-full text-sm font-medium">
                OFERTA
              </span>
            {% elsif product.tags contains 'new' %}
              <span class="absolute top-4 left-4 bg-blue-600 text-white border-0 px-3 py-1 rounded-full text-sm font-medium">
                NUEVO
              </span>
            {% endif %}
            
            <button class="wishlist-btn absolute top-4 right-4 bg-white/80 dark:bg-black/80 backdrop-blur-sm p-2 rounded-full opacity-0 group-hover:opacity-100 transition-opacity">
              <svg class="w-5 h-5 text-gray-900 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </button>
          </div>

          <div class="p-6">
            <h3 class="text-xl text-gray-900 dark:text-white mb-2">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <div class="flex items-center gap-3 mb-4">
              <span class="text-2xl text-gray-900 dark:text-white">
                {{ product.price | money }}
              </span>
              {% if product.compare_at_price > product.price %}
                <span class="text-gray-500 dark:text-gray-400 line-through">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
            </div>
            
            <form action="/cart/add" method="post" class="add-to-cart-form">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white rounded-full py-3 px-6 transition-colors flex items-center justify-center group/btn font-medium">
                <svg class="w-5 h-5 mr-2 group-hover/btn:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                AGREGAR AL CARRITO
              </button>
            </form>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_view_all %}
      <div class="text-center mt-12">
        <a href="{{ section.settings.collection.url }}" class="inline-flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-full transition-colors font-medium">
          VER TODA LA COLECCIÓN
        </a>
      </div>
    {% endif %}
  {% endif %}
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "PRODUCTOS DESTACADOS"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Lo mejor de nuestra colección"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 3,
      "label": "Products to show",
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
