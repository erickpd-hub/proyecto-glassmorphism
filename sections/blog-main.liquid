<section class="container mx-auto px-4 py-12">
  <div class="max-w-6xl mx-auto mb-12">
    <div class="bg-white/30 dark:bg-black/30 backdrop-blur-xl rounded-3xl p-8 md:p-12 border border-white/50 dark:border-white/10 shadow-2xl text-center">
      <h1 class="text-4xl md:text-6xl text-gray-900 dark:text-white mb-4">{{ blog.title }}</h1>
      {% if blog.description != blank %}
        <p class="text-xl text-gray-700 dark:text-gray-300">{{ blog.description }}</p>
      {% endif %}
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for article in blog.articles %}
      <article class="group bg-white/40 dark:bg-black/40 backdrop-blur-lg rounded-2xl overflow-hidden border border-white/50 dark:border-white/10 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
        {% if article.image %}
          <a href="{{ article.url }}" class="block">
            <div class="aspect-video overflow-hidden">
              <img src="{{ article.image | img_url: '800x600' }}" 
                   alt="{{ article.title }}"
                   loading="lazy"
                   class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            </div>
          </a>
        {% endif %}

        <div class="p-6">
          <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mb-3">
            <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
              {{ article.published_at | date: '%d %b %Y' }}
            </time>
            {% if article.author != blank %}
              <span>•</span>
              <span>{{ article.author }}</span>
            {% endif %}
          </div>

          <h2 class="text-2xl text-gray-900 dark:text-white mb-3">
            <a href="{{ article.url }}" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
              {{ article.title }}
            </a>
          </h2>

          {% if article.excerpt != blank %}
            <p class="text-gray-700 dark:text-gray-300 mb-4">
              {{ article.excerpt | strip_html | truncate: 120 }}
            </p>
          {% endif %}

          <a href="{{ article.url }}" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline font-medium">
            Leer más
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </article>
    {% endfor %}
  </div>

  {% if paginate.pages > 1 %}
    <div class="mt-12 flex justify-center">
      {% render 'pagination', paginate: paginate %}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Blog",
  "settings": []
}
{% endschema %}
