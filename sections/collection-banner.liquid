<section class="container mx-auto px-4 pt-6 pb-12">
  <div class="max-w-6xl w-full mx-auto bg-white/30 dark:bg-black/30 backdrop-blur-xl rounded-3xl p-12 md:p-16 border border-white/50 dark:border-white/10 shadow-2xl">
    <div class="text-center space-y-4">
      {% if collection.image %}
        <div class="mb-6 rounded-2xl overflow-hidden max-h-64">
          <img src="{{ collection.image | img_url: '1200x400', crop: 'center' }}" 
               alt="{{ collection.title }}"
               class="w-full h-full object-cover">
        </div>
      {% endif %}
      
      <h1 class="text-4xl md:text-6xl text-gray-900 dark:text-white tracking-tight">
        {{ collection.title | upcase }}
      </h1>
      
      {% if collection.description != blank %}
        <div class="text-xl text-gray-700 dark:text-gray-300 max-w-2xl mx-auto">
          {{ collection.description }}
        </div>
      {% endif %}
      
      <p class="text-gray-600 dark:text-gray-400">
        {{ collection.all_products_count }} {{ 'collections.general.items' | t }}
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection Banner",
  "settings": []
}
{% endschema %}
