{% if recommendations.performed and recommendations.products_count > 0 %}
<section class="container mx-auto px-4 pb-20">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl text-gray-900 dark:text-white mb-4">
        TAMBIÃ‰N TE PUEDE GUSTAR
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for product in recommendations.products limit: 4 %}
        <div class="group bg-white/40 dark:bg-black/40 backdrop-blur-lg rounded-2xl overflow-hidden border border-white/50 dark:border-white/10 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
          <div class="relative overflow-hidden aspect-square">
            <a href="{{ product.url }}">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | img_url: '600x600' }}" 
                     alt="{{ product.title }}"
                     loading="lazy"
                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
              {% endif %}
            </a>
          </div>

          <div class="p-6">
            <h3 class="text-lg text-gray-900 dark:text-white mb-2">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <div class="flex items-center gap-3 mb-4">
              <span class="text-xl text-gray-900 dark:text-white">
                {{ product.price | money }}
              </span>
              {% if product.compare_at_price > product.price %}
                <span class="text-gray-500 dark:text-gray-400 line-through text-sm">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
            </div>
            
            <form action="/cart/add" method="post" class="add-to-cart-form">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white rounded-full py-3 px-6 transition-colors flex items-center justify-center group/btn font-medium text-sm">
                <svg class="w-5 h-5 mr-2 group-hover/btn:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                AGREGAR
              </button>
            </form>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<script>
  // Fetch cart recommendations
  fetch('/recommendations/products.json?section_id={{ section.id }}&intent=related')
    .then(response => response.json())
    .then(data => {
      // Recommendations are automatically rendered by Shopify
    })
    .catch(error => console.error('Error fetching recommendations:', error));
</script>

{% schema %}
{
  "name": "Cart Recommendations",
  "settings": []
}
{% endschema %}
